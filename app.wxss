/**app.wxss**/
@import 'lib/weui.wxss';
@import 'lib/iconfont/iconfont.wxss';

page {
  background: #ebebeb;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.search {
  width: 100%;
  height: 90rpx;
  box-sizing: border-box;
  padding: 10rpx;
  background: #fff;
  display: flex;
  flex-flow: nowrap;
  position: relative;
}

.search .icon_search {
  position: absolute;
  z-index: 2;
  top: 16rpx;
  left: 26rpx;
  color: #626262;
}

.search input {
  flex: 1;
  height: 70rpx;
  box-sizing: border-box;
  background: #ebebeb;
  border-radius: 5px;
  padding-left: 30px;
  font-size: 14px;
}

.search input::placeholder {
  font-size: 12px;
  color: #626262;
}
