/**app.wxss**/
@import 'lib/weui.wxss';
@import 'lib/iconfont/iconfont.wxss';

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.search {
  width: 100%;
  height: 90rpx;
  box-sizing: border-box;
  padding: 10rpx;
  background: #fff;
  display: flex;
  flex-flow: nowrap;
}
.search .icon_search{
  position: absolute;
  top: 16rpx;
  left: 26rpx;
  color: #626262;
}
.search input {
  flex: 1;
  height: 70rpx;
  box-sizing: border-box;
  background: #ebebeb;
  border-radius: 5px;
  padding-left: 30px;
  font-size: 14px;
}

.search input::placeholder {
  font-size: 12px;
  color: #626262;
}
